<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryWhite"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/bg_1"
        android:scaleType="fitXY"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@color/colorPrimaryWhite"
        android:elevation="4dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="40dp"
            android:drawableStart="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Add New Discount"
            android:textAlignment="center"
            android:textColor="#3d3d3d"
            android:textSize="26dp" />

        <Space
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="@drawable/linear_new_item"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:srcCompat="@mipmap/mini_icon"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="30dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonSelectImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:background="@drawable/bordered_button"
                android:drawableStart="@drawable/ic_collections"
                android:drawableTint="@color/colorPrimaryWhite"
                android:onClick="SelectImg"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Select Image"
                android:textColor="@color/colorPrimaryWhite" />

            <Button
                android:id="@+id/buttonCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bordered_button"
                android:drawableStart="@drawable/ic_camera_alt"
                android:drawableTint="@color/colorPrimaryWhite"
                android:onClick="SelectImg"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Select Image"
                android:textColor="@color/colorPrimaryWhite" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/add_discount_item_space"
            android:layout_marginTop="@dimen/add_discount_item_space">

            <Button
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/halfround_left"
                android:elevation="8dp"
                android:text="Name"
                android:textColor="@color/colorPrimaryWhite"
                android:textSize="10dp" />

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="@drawable/edit_text_selector"
                android:elevation="2dp"
                android:ems="14"
                android:inputType="textPersonName"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="@color/purple" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/add_discount_item_space">

            <Button
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/halfround_left"
                android:elevation="8dp"
                android:text="Description"
                android:textColor="@color/colorPrimaryWhite"
                android:textSize="10dp" />

            <EditText
                android:id="@+id/editTextDescription"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="@drawable/edit_text_selector"
                android:elevation="2dp"
                android:ems="14"
                android:inputType="textPersonName"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="@color/purple" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/add_discount_item_space">

            <Button
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/halfround_left"
                android:elevation="8dp"
                android:text="Category"
                android:textColor="@color/colorPrimaryWhite"
                android:textSize="10dp" />

            <EditText
                android:id="@+id/editTextCategory"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="@drawable/edit_text_selector"
                android:elevation="2dp"
                android:ems="14"
                android:inputType="textPersonName"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="@color/purple" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="80dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/halfround_left"
                    android:elevation="8dp"
                    android:text="$ Price"
                    android:textColor="@color/colorPrimaryWhite"
                    android:textSize="10dp" />

                <EditText
                    android:id="@+id/editTextPrice"
                    android:layout_width="80dp"
                    android:layout_height="32dp"
                    android:background="@drawable/edit_text_selector"
                    android:elevation="2dp"
                    android:ems="14"
                    android:inputType="numberDecimal"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:textColor="@color/purple" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/add_discount_item_space"
                android:layout_marginLeft="4dp">

                <Button
                    android:layout_width="80dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/halfround_left"
                    android:elevation="8dp"
                    android:text="% Discount"
                    android:textColor="@color/colorPrimaryWhite"
                    android:textSize="10dp" />

                <EditText
                    android:id="@+id/editTextDiscount"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:background="@drawable/edit_text_selector"
                    android:elevation="2dp"
                    android:ems="14"
                    android:inputType="number"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:textColor="@color/purple" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/buttonAddItem"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:background="@drawable/round_button"
        android:text="Add Discount"
        android:textColor="@color/colorPrimaryWhite" />

    </LinearLayout>

</FrameLayout>