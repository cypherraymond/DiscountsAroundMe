<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/accent_pink_gradient"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="@drawable/bg3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="15dp"
        android:text="Add New Discount"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryWhite"
        android:textSize="26dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="70dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            app:srcCompat="@mipmap/mini_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonSelectImage"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/bordered_button_transparent"
                android:drawableStart="@drawable/ic_collections"
                android:drawableTint="@color/colorPrimaryWhite"
                android:onClick="SelectImg"

                android:padding="6dp"
                android:text="Gallery"
                android:textColor="@color/colorPrimaryWhite" />

            <Button
                android:id="@+id/buttonCamera"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/bordered_button_transparent"
                android:drawableStart="@drawable/ic_camera_alt"
                android:drawableTint="@color/colorPrimaryWhite"
                android:padding="6dp"
                android:text="Camera"
                android:textColor="@color/colorPrimaryWhite" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginBottom="@dimen/add_discount_item_space"
            android:layout_marginTop="@dimen/add_discount_item_space">

            <Button
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/halfround_left"
                android:elevation="8dp"
                android:text="Name"
                android:textColor="@color/colorPrimaryWhite"
                android:textSize="10dp" />

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="@drawable/edit_text_selector"
                android:elevation="2dp"
                android:ems="14"
                android:inputType="textPersonName"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="@color/orange" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/add_discount_item_space">

            <Button
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/halfround_left"
                android:elevation="8dp"
                android:text="Description"
                android:textColor="@color/colorPrimaryWhite"
                android:textSize="10dp" />

            <EditText
                android:id="@+id/editTextDescription"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="@drawable/edit_text_selector"
                android:elevation="2dp"
                android:ems="14"
                android:inputType="textPersonName"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="@color/orange" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/add_discount_item_space">

            <Button
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/halfround_left"
                android:elevation="8dp"
                android:text="Category"
                android:textColor="@color/colorPrimaryWhite"
                android:textSize="10dp" />

            <EditText
                android:id="@+id/editTextCategory"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="@drawable/edit_text_selector"
                android:elevation="2dp"
                android:ems="14"
                android:inputType="textPersonName"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="@color/orange" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="80dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/halfround_left"
                    android:elevation="8dp"
                    android:text="$ Price"
                    android:textColor="@color/colorPrimaryWhite"
                    android:textSize="10dp" />

                <EditText
                    android:id="@+id/editTextPrice"
                    android:layout_width="80dp"
                    android:layout_height="32dp"
                    android:background="@drawable/edit_text_selector"
                    android:elevation="2dp"
                    android:ems="14"
                    android:inputType="numberDecimal"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:textColor="@color/orange" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/add_discount_item_space"
                android:layout_marginLeft="4dp">

                <Button
                    android:layout_width="80dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/halfround_left"
                    android:elevation="8dp"
                    android:text="% Discount"
                    android:textColor="@color/colorPrimaryWhite"
                    android:textSize="10dp" />

                <EditText
                    android:id="@+id/editTextDiscount"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:background="@drawable/edit_text_selector"
                    android:elevation="2dp"
                    android:ems="14"
                    android:inputType="number"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:textColor="@color/orange" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/buttonAddItem"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="40dp"
        android:background="@drawable/orange_circled_button"
        android:text="Add Discount"
        android:textColor="@color/colorPrimaryWhite" />

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|left"
        android:padding="14dp"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:tint="@color/colorPrimaryWhite" />

</FrameLayout>