<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tl.discountsaroundme.Activities.UserProfileActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvUserProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Profile"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvDisplayName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/Image"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            app:srcCompat="@color/black" />

        <EditText
            android:id="@+id/etDisplayName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter a new display name"
            android:inputType="textPersonName"
            android:visibility="gone" />

        <EditText
            android:id="@+id/etChangeEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="New Email"
            android:inputType="textPersonName"
            android:visibility="gone" />

        <EditText
            android:id="@+id/etChangePass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="New Password"
            android:inputType="textPassword"
            android:visibility="gone" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter your  password"
            android:inputType="textPassword"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvDelAcc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Are you sure?"
            android:textAlignment="center"
            android:textColor="@color/colorAlert"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btYes"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorAlert"
                android:text="Yes"
                android:textColor="@color/colorPrimaryWhite"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <Button
                android:id="@+id/btNo"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="No"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryWhite"
                android:textSize="18sp"
                android:visibility="gone" />
        </LinearLayout>

        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:textColor="@color/colorPrimaryWhite"
            android:id="@+id/btOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="OK"
            android:textSize="14sp"
            android:visibility="gone" />

        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:textColor="@color/colorPrimaryWhite"
            android:id="@+id/btMailChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Email" />

        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:textColor="@color/colorPrimaryWhite"
            android:id="@+id/btPassChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password" />

        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:textColor="@color/colorPrimaryWhite"
            android:id="@+id/btImageChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Image" />

        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:textColor="@color/colorPrimaryWhite"
            android:id="@+id/btDisplayName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Display Name" />

        <Button
            android:id="@+id/btDeleteAccount"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:background="@color/colorAlert"
            android:text="Delete Account"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:visibility="visible" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
