<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryWhite"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/accent_pink_gradient" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="350dp"
        android:background="@drawable/bg3" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDisplayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="John Doe"
            android:layout_marginTop="55dp"
            android:textColor="@color/colorPrimaryWhite"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/user_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:text="owner"
            android:textColor="@color/colorPrimaryWhite"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/Image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:contentDescription="User Image"
            app:srcCompat="@drawable/marker_clothing" />

        <Button
            android:id="@+id/btMailChange"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:background="@drawable/orange_circled_button"
            android:text="Change Email"
            android:textColor="@color/colorPrimaryWhite" />

        <Button
            android:id="@+id/btPassChange"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:background="@drawable/orange_circled_button"
            android:text="Change Password"
            android:textColor="@color/colorPrimaryWhite" />

        <Button
            android:id="@+id/btImageChange"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/orange_circled_button"
            android:text="Change Image"
            android:textColor="@color/colorPrimaryWhite" />

        <Button
            android:id="@+id/btDisplayName"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/orange_circled_button"
            android:text="Change Name"
            android:textColor="@color/colorPrimaryWhite" />

        <Button
            android:id="@+id/btDeleteAccount"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:background="@drawable/orange_circled_button"
            android:backgroundTint="@color/colorAlert"
            android:text="Delete Account"
            android:textColor="@color/colorPrimaryWhite"
            android:visibility="visible" />

    </LinearLayout>

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:layout_gravity="start|left"
        android:tint="@color/colorPrimaryWhite"
        android:src="@drawable/ic_arrow_back_black_24dp"/>

</FrameLayout>