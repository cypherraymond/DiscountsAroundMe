<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/manage_picture"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_gravity="start|top"
        android:layout_margin="4dp"
        android:contentDescription="Discount picture from my discounts"
        app:srcCompat="?android:attr/selectableItemBackground" />

    <TextView
        android:id="@+id/manage_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_marginStart="96dp"
        android:layout_marginTop="4dp"
        android:text="Item Name"
        android:textColor="@color/colorPrimaryWhite"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/manage_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:layout_marginStart="96dp"
        android:layout_marginTop="4dp"
        android:text="Item Description"
        android:textColor="@color/colorPrimaryWhite"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="96dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/manage_price"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="$60"
            android:textColor="@color/colorPrice"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/manage_discount"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:text="20% off"
            android:textColor="@color/colorPrice"
            android:textSize="18sp" />

    </LinearLayout>

</FrameLayout>