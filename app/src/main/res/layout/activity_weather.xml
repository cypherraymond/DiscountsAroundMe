<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryWhite"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:background="@drawable/gradient_blue" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:background="@drawable/bg_white_wavy_overlay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvWeatherActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today's Weather Forecast"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryWhite"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_marginBottom="2dp"/>
        <TextView
            android:id="@+id/tvCurrentTime"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Current TIME"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryWhite"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/IVWeather"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:contentDescription="Weather image" />

        <TextView
            android:id="@+id/tvWeatherCondition"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:text="weather Condition"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryWhite"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:layout_gravity="center"
            android:id="@+id/tvTemperature"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="34"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryWhite"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvCityName"
            android:layout_marginBottom="5dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="City"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimaryWhite"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvForecastTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:text="Forecast time: YYYY-MM-DD HH-MM-SS"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryWhite"
            android:textSize="18sp" />


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15sp"
            android:fillViewport="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:orientation="horizontal">

                <ListView
                    android:id="@+id/lvListview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp">

                </ListView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btNotify"
                        android:layout_width="150dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:text="Button" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView"
                        tools:text="asdasdasdasdasd" />

                    <ToggleButton
                        android:id="@+id/toggleButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ToggleButton" />

                    <CheckBox
                        android:id="@+id/cbPerday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Per Day" />
                </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>


</FrameLayout>
